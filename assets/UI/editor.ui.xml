        <flex-cell flex="2">
            <flex direction="horizontal">
                <flex-cell flex="1">
                    <padding left="5" right="5" top="5" bottom="5">
                        <stack>
                            <color-rect style="width=100%; height=100%; primary-color=#424242"/>
                            <padding left="5" right="5" top="5" bottom="5">
                                <glue direction="vertical">
                                    <text font-file-name="arial.ttf" alignment="left" font-size="12" text="Bird"/>
